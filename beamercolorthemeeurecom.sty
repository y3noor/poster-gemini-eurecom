% Gemini theme
% https://github.com/anishathalye/gemini

\ProvidesPackage{beamerthemeEurecom}

% ====================
% Definitions
% ====================

% Colors based on the provided references
\definecolor{eurecomnavyblue}{RGB}{0, 70, 130}  % Adjusted Navy Blue for better visibility
\definecolor{eurecomlightblue}{RGB}{100, 143, 255}  % Light Blue from the palette
\definecolor{eurecomblue}{RGB}{0, 159, 223}  % Pantone 2995 C
\definecolor{eurecomgray}{RGB}{230, 230, 230}  % Light Gray
\definecolor{cyan100}{RGB}{0, 159, 223}  % 100% Cyan

% Extra colors
\definecolor{lightorange}{RGB}{255, 242, 232}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=eurecomnavyblue}

% Headline
\setbeamercolor{headline}{fg=black,bg=eurecomgray}

% Block
\setbeamercolor{block title}{fg=eurecomnavyblue,bg=white}
\setbeamercolor{block separator}{bg=eurecomnavyblue}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=eurecomnavyblue,bg=lightorange}
\setbeamercolor{block alerted separator}{bg=eurecomnavyblue}
\setbeamercolor{block alerted body}{fg=black,bg=lightorange}

% Example Block
\setbeamercolor{block example title}{fg=eurecomnavyblue,bg=cyan100!20}
\setbeamercolor{block example separator}{bg=eurecomnavyblue}
\setbeamercolor{block example body}{fg=black,bg=cyan100!20}

% Heading
\setbeamercolor{heading}{fg=eurecomnavyblue}

% Itemize
\setbeamercolor{item}{fg=eurecomnavyblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
